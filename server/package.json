{
  "name": "server",
  "version": "1.0.0",
  "description": "\"curateddocs server side\"",
  "scripts": {
    "clean": "cd .. && npm run clean",
    "db:reset": "./scripts/resetdb.sh",
    "kill": "./scripts/killserver.sh",
    "lint": "npx eslint --ext .js,.ts .",
    "lint:fix": "npx prettier --write  \"**/*.ts\" \"**/*.json\" \"**/*.js\" && npx eslint --fix --ext .js,.ts .",
    "build": "tsc --build",
    "postbuild": "cp package.json ../dist/server/package.json && cp ../shared/package.json ../dist/shared/package.json && cp -r -L ./fonts ../dist/server/fonts && cp -r ./images ../dist/server/images && cd ../dist/server && npm install --only=production",
    "server": "cd ../dist/server && node server.js",
    "db:migrate": "npx prisma migrate deploy",
    "db:migrate:make": "npx knex migrate:make -x ts",
    "start": "ts-node devServer.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "mosaic",
  "license": "ISC",
  "devDependencies": {
    "@types/cookie-session": "^2.0.44",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.10",
    "@types/passport": "^1.0.7",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "http-proxy-middleware": "^2.0.1",
    "ngrok": "^3.2.7",
    "nodemon": "^2.0.13",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@prisma/client": "^4.9.0",
    "@types/cors": "^2.8.12",
    "@types/lodash": "^4.14.159",
    "@types/nodemon": "^1.19.1",
    "@types/passport-local": "^1.0.34",
    "@types/yup": "^0.29.4",
    "body-parser": "^1.19.0",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "lodash": "^4.17.19",
    "luxon": "^2.0.2",
    "morgan": "^1.10.0",
    "objection": "^2.2.15",
    "passport": "^0.5.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.1",
    "prisma": "^4.9.0",
    "zod": "^3.20.2"
  }
}